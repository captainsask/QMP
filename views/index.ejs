<!DOCTYPE html>
<html ng-app='qMotorStore'>
    <head>
        <title><%= title %></title>
        <meta content="IE=edge" http-equiv="X-UA-Compatible"/>
        <meta content="width=device-width, initial-scale=1" name="viewport">
        <link rel='stylesheet' href='/css/style.css' />
        <link rel="stylesheet" href="/css/lib/owl.carousel.css"/>
        <link rel="stylesheet" href="/css/lib/owl.theme.css"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel='stylesheet' href='/css/lib/font-awesome.min.css'/>
        <script type="text/javascript" src="/js/lib/angular.min.js"></script>
        <script type="text/javascript" src="/js/angular-core.js"></script>

    </head>
    <body ng-controller="CarController as qCar">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle Navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Quadrus Motors</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Contact</a> </li>
                    </ul>
                </div>
            </div>
        </nav>
        <h1><%= title %></h1>
        <h3>View our Amazing Line-up</h3>
        <div id="vehicle-carousel" class="owl-carousel">
            <div class="vehicle-fields" ng-repeat="car in qCar.cars">
                <vehicle-layout></vehicle-layout>
            </div>
        </div>
        <br/>
        <br/>
        <section ng-controller="OrderController as qOrders">
            <orders-layout></orders-layout>
        </section>
        <script type="text/javascript" src="/js/lib/modernizr.custom.js"></script>
        <script type="text/javascript" src="/js/require-config.js"></script>
        <script type="text/javascript" src="/js/lib/require-2.1.17.min.js"></script>
        <script type="text/javascript">
            require(["jquery", "bootstrap", "owl-carousel"], function(){
                $("#vehicle-carousel").owlCarousel({
                    singleItem: true
                });

                $("#toggler").click(function(){
                    $(this).toggleClass('active, inactive');
                })
            });
        </script>
    </body>
</html>
